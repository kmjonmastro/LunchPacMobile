<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="LunchPac.LandingPage" 
	xmlns:sys="clr-namespace:System;assembly=mscorlib" Title="{Binding Source={x:Static sys:DateTime.Today},   
       StringFormat='Today {0:dd/MM/yy}'}">
	<ContentPage.Content>
	<StackLayout VerticalOptions="Start">
		<Label Text="Restaurants" />
		<ListView x:Name="RestaurantListView" ItemsSource="{Binding Restaurants}">
		    <ListView.ItemTemplate>
		      <DataTemplate>
		        <TextCell Text="{Binding RestaurantName}" />
		      </DataTemplate>
		    </ListView.ItemTemplate>
		  </ListView>
		  <Label Text="Previous Orders" />
		  <ListView x:Name="PrevisousOrdersListView" ItemsSource="{Binding Orders}">
		    <ListView.ItemTemplate>
		      <DataTemplate>
		        <TextCell Text="{Binding OrderItem}" />
		      </DataTemplate>
		    </ListView.ItemTemplate>
		  </ListView>
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
