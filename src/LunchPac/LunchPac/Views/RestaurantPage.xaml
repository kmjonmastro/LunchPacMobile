<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LunchPac.RestaurantPage" Title="{Binding Title}">
	<ContentPage.Content Padding="0">
		<Grid RowSpacing="0" ColumnSpacing="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<WebView x:Name="Browser" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Grid.ColumnSpan="2" Source="{Binding MenuUrl}" />
			<Button 
				x:Name="OrderButton"
				BackgroundColor="{Binding OrderButtonColor}" 
				BorderRadius="0"
				TextColor="White"
				IsEnabled="{Binding OrderButtonEnabled}"
				Grid.Row="1" Grid.ColumnSpan="2"
				HorizontalOptions="FillAndExpand"
				Clicked="OnOrderButtonClicked"
				FontAttributes="Bold"
				Text="{Binding OrderButtonText}"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>
